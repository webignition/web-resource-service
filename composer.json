{
    "name": "webignition/web-resource-service",
    "type": "library",
    "description": "Service to retrieve over HTTP a \\webignition\\WebResource\\WebResource",
    "keywords": ["web", "resource", "service"],
    "homepage": "https://github.com/webignition/web-resource-service",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "webignition\\WebResource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\Tests\\WebResource\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/webignition/web-resource-model"
        },
        {
            "type": "vcs",
            "url": "https://github.com/webignition/web-page-model"
        },
        {
            "type": "vcs",
            "url": "https://github.com/webignition/web-json-model"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "guzzlehttp/guzzle":"~5",
        "webignition/internet-media-type":">=0.4.4,<2.0",
        "webignition/web-resource-model":">=1.3.1,<2",
        "webignition/web-page-model":">=1.2,<2",
        "webignition/web-json-model":">=1.1.5,<2",
        "webignition/url":">=1.9.14,<2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "3.*",
        "mockery/mockery": "~0.9",
        "satooshi/php-coveralls": "~1.0"
    },
    "minimum-stability":"dev",
    "prefer-stable":true
}
