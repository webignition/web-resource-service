{
    "name": "webignition/web-resource-service",
    "type": "library",
    "description": "Service to retrieve over HTTP a \\webignition\\WebResource\\WebResource",
    "keywords": ["web", "resource", "service"],
    "homepage": "https://github.com/webignition/web-resource-service",
    "license": "MIT",

    "require": {
        "php": ">=5.3.2",
        "guzzle/guzzle": ">=3.8.0",
        "webignition/internet-media-type":">=0.4.4,<2.0",
        "webignition/web-resource-model":">=1.1,<2.0",
        "webignition/web-page-model":">=1.0,<2.0",
        "webignition/web-json-model":">=1.0,<2.0"
    },

    "autoload": {
        "psr-0": {
            "webignition\\Tests": "tests/",
            "": "src/"
        }
    },

    "require-dev": {
        "symfony/class-loader": "*",
        "phpunit/phpunit": "3.7.*"
    },
    
    "minimum-stability":"dev",
    "prefer-stable":true
}
